# Image "run" : ne fait que reposer sur la base et d√©marrer
FROM osmocom-nitb:latest

COPY services/osmo-bts.service /lib/systemd/system/
COPY scripts/. /etc/osmocom/
COPY configs/*cfg /etc/osmocom/
COPY configs/mobile.cfg /root/.osmocom/bb/mobile.cfg
COPY configs/*conf /etc/asterisk/
RUN mv /etc/osmocom/run.sh /root/
RUN chmod +x /root/run.sh
ENTRYPOINT ["/etc/osmocom/entrypoint.sh"]
RUN mkdir -p /etc/asterisk /var/lib/asterisk /var/log/asterisk /var/run/asterisk /var/spool/asterisk && \
    chmod 755 /etc/asterisk /var/lib/asterisk /var/log/asterisk /var/run/asterisk /var/spool/asterisk

CMD ["bash"]
